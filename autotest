begin
  require 'autotest/fsevent' 
rescue LoadError 
  puts "warning: autotest-fsevent not installed"
end

Autotest.add_hook :initialize do |autotest|
  %w{.git vendor tmp log doc .gitignore .rvmrc gemspec .bundle README Gemfile Rakefile .DS_Store ._*}.each do |exception|
    autotest.add_exception(exception)
  end
end
