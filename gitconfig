[color]
  ui = auto

[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "branch"]
  current = yellow reverse
  local = yellow bold
  remote = green bold
  plain = red bold

[color "status"]
  added = yellow
  changed = green bold
  untracked = blue bold

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch -vv
  sb = show-branch
  df = diff --ignore-space-change
  aa = add -A
  rem = remote -v

[branch]
  autosetuprebase = always

[push]
  # push current branch even if you've never pushed it before
  default = current

[user]
  name = Tee Parham
  email = parhameter@gmail.com

[core]
  excludesfile = /Users/tee/.gitignore
  whitespace = -trailing-space
  ignorecase = false

[commit]
  gpgsign = true

[tag]
  gpgSign = true

[init]
  defaultBranch = main

[credential]
  helper = /usr/local/share/gcm-core/git-credential-manager

[credential "https://dev.azure.com"]
  useHttpPath = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

